= simple_form_for [@organization, @customer] do |f|
  .actions-top
    .center-text= f.submit nil, class: "btn btn-primary"
  .row
    .col-md-6
      %h3 Details
      = f.input :account_name
      = f.input :first_name
      = f.input :last_name
      %h3 Contact
      = f.input :email
      = f.input :business_phone
      = f.input :direct_phone
      = f.input :mobile_phone
    .col-md-6
      %h3 Address
      = f.input :street_address
      = f.input :city
      = f.input :state_or_provence, label: "State or Province"
      = f.input :postal_code, label: "Zip/Postal"
  .actions-bottom
    .center-text= f.submit nil, class: "btn btn-primary"
